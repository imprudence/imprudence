	     width="300" />
	<spinner bottom="-157" control_name="RenderFogRatio" decimal_digits="1" enabled="true"
	     follows="left|top" height="16" hidden="false" increment="0.1"
	     initial_val="4" label="Fog Distance Ratio:" label_width="138" left="10"
	     max_val="10" min_val="0.5" mouse_opaque="true" name="fog" width="202" />
