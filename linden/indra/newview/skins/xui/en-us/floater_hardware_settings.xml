	     decimal_digits="0" enabled="true" follows="left|top" height="16"
	     hidden="false" increment="16" initial_val="32" label="Texture Memory (MB):"
	     label_width="135" left="10" max_val="4096" min_val="0" mouse_opaque="true"
	     name="GrapicsCardTextureMemory"
