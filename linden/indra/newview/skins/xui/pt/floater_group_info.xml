<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<floater name="groupinfo" title="Os Lindens - Informações do grupo">
	<tab_container name="tab">
		<panel label="Geral" name="gen">
			<text name="title_box">
				Informações de grupo
			</text>
			<text name="txt">
				Grupos são uma forma divertidade de colaborar com seus amigos.
			</text>
			<text name="txt2">
				Grupos permitem a você ter títulos, insígnias e votar.
			</text>
			<text name="txt3">
				Qualquer um poderá criar um grupo. Cada pessoa poderá pertencer a até 15 grupos.
			</text>
			<text name="txt4">
				Grupos devem ter pelo menos 3 membros para ficarem ativos.
			</text>
			<text name="group_create_text">
				Criar um grupo custa L$100.
			</text>
			<text name="lbl">
				Nome:
			</text>
			<text name="founder_label">
				Fundador:
			</text>
			<text name="lbl2">
				Apresentação:
			</text>
			<check_box label="Mostrar na lista de grupo" name="sho" />
			<check_box label="Mostrar membros na lista de grupo" name="sho_mem" />
			<check_box label="Publicar na web." name="allow_publish"
			     tool_tip="Publicar informações de seu perfil na internet." />
			<button label="?" label_selected="?" name="publish_help_btn" />
			<check_box label="Adulto" name="mature"
			     tool_tip="A informação de seu perfil é considerada adulta." />
		</panel>
		<panel label="Títulos" name="tit">
			<text name="txt">
				Títulos de grupo
			</text>
			<text name="txt2">
				Grupos podem ter oficiais e membros, ambos poderão agregar títulos especiais.
			</text>
			<text name="txt3">
				Estes títulos aparecem antes de seus nomes no mundo, em bate-papo e MI.
			</text>
			<text name="lbl">
				Título de oficial:
			</text>
			<text name="lbl2">
				Título de membro:
			</text>
			<text name="lbl3">
				Arraste uma textura para fora do seu inventário para definir a insínia do grupo.
			</text>
			<texture_picker name="insig" tool_tip="Clique aqui para escolher uma figura" />
		</panel>
		<panel label="Membros" name="mem">
			<text name="txt">
				Membros de grupo
			</text>
			<text name="txt2">
				Membros e oficiais do grupo atual.
			</text>
			<text name="txt3">
				Clique no nome para ver o perfil do membro.
			</text>
			<text name="lbl">
				Oficiais:
			</text>
			<text name="members_label">
				Membros:
			</text>
			<button label="Expulsar membro" label_selected="Expulsar membro"
			     name="eject_member_btn" />
		</panel>
		<panel label="Votar" name="voting">
			<tab_container name="tab">
				<panel label="Eleição" name="recall">
					<text name="txt">
						Eleição de grupo
					</text>
					<text name="instructions">
						Pressione o botão Começar Eleição para iniciar uma nova eleição. 
Os candidatos incluirão todos os membros do grupo, exceto os oficiais.
					</text>
					<text name="lbl">
						Candidatos:
					</text>
					<button label="Votar" label_selected="Votar" name="btn_vote" />
					<button label="Abster-se" label_selected="Abster-se" name="btn_abstain" />
					<button label="Começar eleição" label_selected="Começar eleição"
					     name="btn_start_election" />
					<text name="lbl2">
						Quórum:
					</text>
					<spinner name="quorum"
					     tool_tip="# do total de membros votaram é necessário para o resultado ser compulsório." />
					<text name="quorum_text">
						do total de 111 membros do grupo.
					</text>
					<text name="lbl3">
						Maioridade:
					</text>
					<radio_group name="majority" tool_tip="Majority of total votes needed to win.">
						<radio_item name="radio">
							Maioria Simples
						</radio_item>
						<radio_item name="radio2">
							2/3 de Maioria
						</radio_item>
						<radio_item name="radio3">
							Unânime
						</radio_item>
					</radio_group>
					<text name="duration_lbl">
						Duração:
					</text>
					<spinner name="duration" tool_tip="# dias a eleição continuará." />
					<text name="duration_days">
						dias
					</text>
					<text name="start_lbl">
						Eleição começa:
					</text>
					<text name="end_lbl">
						Eleição termina:
					</text>
				</panel>
				<panel label="Proposta" name="panel_group_proposals">
					<text name="txt">
						Propostas de grupo
					</text>
					<text name="instructions">
						Não há propostas ativas. Pressione o botão Criar proposta para
criar uma nova proposta.
					</text>
					<text name="proposal_lbl">
						Propostas:
					</text>
					<button label="Sim" label_selected="Sim" name="btn_yes" />
					<button label="Não" label_selected="Não" name="btn_no" />
					<button label="Abster-se" label_selected="Abster-se" name="btn_abstain" />
					<button label="Ver lista" label_selected="Ver lista" name="btn_view_list" />
					<button label="Ver item" label_selected="Ver item" name="btn_view_item" />
					<button label="Criar proposta" label_selected="Criar proposta" name="btn_proposal" />
					<button label="Enviar" label_selected="Enviar" name="btn_submit" />
					<text name="quorum_lbl">
						Quórum:
					</text>
					<spinner name="quorum"
					     tool_tip="# do total de membros votaram é necessário para o resultado ser compulsório." />
					<text name="quorum_text">
						do total de 111 membros do grupo.
					</text>
					<text name="majority_lbl">
						Maioridade:
					</text>
					<radio_group name="majority" tool_tip="Majority of total votes needed to win.">
						<radio_item name="radio">
							Maioria Simples
						</radio_item>
						<radio_item name="radio2">
							2/3 de Maioria
						</radio_item>
						<radio_item name="radio3">
							Unânime
						</radio_item>
					</radio_group>
					<text name="duration_lbl">
						Duração:
					</text>
					<spinner name="duration" tool_tip="# dias a eleição continuará." />
					<text name="duration_text">
						dias
					</text>
					<text name="start_lbl">
						Votação começa:
					</text>
					<text name="end_lbl">
						Votação termina:
					</text>
				</panel>
				<panel label="Histórico" name="History">
					<text name="txt">
						Histórico de votação de grupo
					</text>
					<text name="instructions">
						Você pode ver os resultado votação de grupo passada selecionando a votação.
					</text>
					<text name="instructions2">
						pressionando Ver item.
					</text>
					<text name="history_list_lbl">
						Votos passados:
					</text>
					<text name="vote_text_lbl">
						Resultados da votação:
					</text>
					<button label="Ver lista" label_selected="Ver lista" name="btn_view_list" />
					<button label="Ver item" label_selected="Ver item" name="btn_view_item" />
				</panel>
			</tab_container>
		</panel>
		<panel label="Convite" name="inv">
			<text name="txt">
				Convites de grupo
			</text>
			<text name="txt2">
				Convites são enviados via mensagem instantânea.
			</text>
			<text name="txt3">
				Clique no botão adicionar para adicionar usuários à lista.
			</text>
			<text name="lbl">
				Oficiais:
			</text>
			<button label="Adionar oficial..." label_selected="Adionar oficial..."
			     name="add_officer_btn" />
			<button label="Remover seleção" label_selected="Remover seleção"
			     name="remove_officer_btn" />
			<text name="lbl2">
				Membros:
			</text>
			<button label="Adicionar membro..." label_selected="Adicionar membro..."
			     name="add_member_btn" />
			<button label="Remover seleção" label_selected="Remover seleção"
			     name="remove_member_btn" />
			<text name="lbl3">
				Taxa de assinatura:
			</text>
			<check_box label="Abrir registro (sem necessidade de convite)" name="open" />
		</panel>
		<panel label="Terreno" name="land">
			<text name="txt">
				Terreno de grupo
			</text>
			<text name="lbl">
				Total de terreno contribuído:
			</text>
			<button label="Mapa..." label_selected="Mapa..." name="map_btn" />
			<text name="lbl2">
				Total de terreno em uso:
			</text>
			<text name="lbl3">
				Terreno disponível:
			</text>
			<button label="Definir contribuição" label_selected="Definir contribuição"
			     name="set_contrib_btn" />
			<text name="warning_label">
				AVISO: Grupo mantém terras demais. Membros do grupo precisam contribuir mais.
			</text>
		</panel>
		<panel label="Dinheiro" name="mon">
			<tab_container name="group money history tab">
				<panel label="Planejamento" name="money panel" />
				<panel label="Detalhes" name="money panel2">
					<button label="&lt; Primeiro" label_selected="&lt; Primeiro" name="&lt; Earlier"
					     tool_tip="Voltar no tempo" />
					<button label="Último &gt;" label_selected="Último &gt;" name="Later &gt;"
					     tool_tip="Avançar no tempo" />
				</panel>
				<panel label="Vendas" name="money panel3">
					<button label="&lt; Primeiro" label_selected="&lt; Primeiro" name="&lt; Earlier"
					     tool_tip="Voltar no tempo" />
					<button label="Último &gt;" label_selected="Último &gt;" name="Later &gt;"
					     tool_tip="Avançar no tempo" />
				</panel>
			</tab_container>
		</panel>
	</tab_container>
	<button label="OK" label_selected="OK" name="OK" />
	<button label="Cancelar" label_selected="Cancelar" name="Cancel" />
</floater>
